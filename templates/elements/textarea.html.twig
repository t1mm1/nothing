{#
/**
 * @file
 * Theme override for a textarea element.
 */
#}
{% set classes = [
  'block w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400',
  'focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent',
  'disabled:bg-gray-100 disabled:text-gray-500 disabled:cursor-not-allowed transition-colors duration-500 resize-y',
  errors ? 'border-red-500 focus:ring-red-500' : '',
] %}

<textarea{{ attributes.addClass(classes) }}>{{ value }}</textarea>
