{#
/**
 * @file
 * Theme override for a textarea element.
 */
#}
{% set classes = [
  'block last:mb-0 w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-600 placeholder-gray-300',
  'focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent',
  'disabled:bg-gray-300 disabled:text-gray-600 disabled:cursor-not-allowed transition-colors duration-500 resize-y',
  errors ? 'border-red-600 focus:ring-red-600' : '',
] %}

<textarea{{ attributes.addClass(classes) }}>{{ value }}</textarea>
