{#
/**
 * @file
 * Theme override for number input (quantity).
 */
#}
{% set classes = [
  'block w-20 px-3 py-2 mb-0 border border-gray-300 rounded-lg text-center text-gray-600',
  'focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent',
  'disabled:bg-gray-300 disabled:text-gray-600 disabled:cursor-not-allowed transition-colors duration-500',
  errors ? 'border-red-600 focus:ring-red-600' : '',
] %}

<input{{ attributes.addClass(classes) }} />
