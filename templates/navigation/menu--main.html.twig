{#
/**
 * @file
 * Theme override for main navigation menu (primary menu).
 */
#}

{% import _self as menus %}

{% macro menu_links(items, attributes, menu_level) %}
  {% if items %}
    {% if menu_level == 0 %}
      <ul{{ attributes.addClass('main-navigation-ul main-navigation-ul-0') }}>
    {% else %}
      <ul class="main-navigation-ul main-navigation-ul-level">
    {% endif %}

    {% for item in items %}
      {% set item_classes = [
        'list-none',
        menu_level > 0 ? 'relative group' : '',
      ] %}

      <li{{ item.attributes.addClass(item_classes) }}>
        {% set link_classes = [
          'main-navigation-link',
          menu_level == 0 ? 'main-navigation-link-0' : 'main-navigation-link-level',
        ] %}

        {{ link(item.title, item.url, { 'class': link_classes }) }}

        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}

  </ul>
  {% endif %}
{% endmacro %}

{{ menus.menu_links(items, attributes, 0) }}
