{#
/**
 * @file
 * Theme override for site branding block.
 */
#}
<div class="site-branding flex items-center space-x-4">
  <div class="site-name-slogan">
    {% if site_name %}
      <div class="site-name">
        <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="text-2xl font-bold text-gray-600 hover:text-blue-900 transition-colors">
          {{ site_name }}
        </a>
      </div>
    {% endif %}

    {% if site_slogan %}
      <div class="site-slogan text-sm text-gray-600 italic">
        {{ site_slogan }}
      </div>
    {% endif %}
  </div>
</div>
