{#
/**
 * @file
 * Theme override to display a single page.
 */
#}
<div class="min-h-screen flex flex-col">

  {# header #}
  {% include '@nothing/layout/header.html.twig' %}
  {% if page.header %}
    {{ page.header }}
  {% endif %}

  {# Breadcrumbs #}
  {% if page.breadcrumb %}
    <div class="bg-gray-200">
      <div class="container mx-auto px-6">
        {{ page.breadcrumb }}
      </div>
    </div>
  {% endif %}

  {# Highlighted messages #}
  {% if page.highlighted %}
    <div class="bg-white">
      <div class="container highlighted mx-auto">
        {{ page.highlighted }}
      </div>
    </div>
  {% endif %}

  {# Main Content #}
  <main role="main" class="flex-grow">
    <a id="main-content" tabindex="-1"></a>

    <div class="container mx-auto px-6 py-8">
      <div class="grid grid-cols-1 gap-8">

        <div class="content-area">
          {% if page.page_top %}
            {{ page.page_top }}
          {% endif %}

          {{ page.content }}

          {% if page.page_bottom %}
            {{ page.page_bottom }}
          {% endif %}
        </div>

      </div>
    </div>

  </main>

  {# Footer #}
  {% include '@nothing/layout/footer.html.twig' %}
</div>
