{#
/**
 * @file
 * Theme override for a form element label.
 */
#}
{% set classes = [
  'block text-sm font-semibold text-gray-900 mb-2',
  required ? 'required' : '',
] %}

{% if title is not empty or required %}
  <label{{ attributes.addClass(classes) }}>
    {{ title }}
    {% if required %}
      <span class="text-red-600 ml-1">*</span>
    {% endif %}
  </label>
{% endif %}
