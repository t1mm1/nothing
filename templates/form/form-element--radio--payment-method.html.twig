{#
/**
 * @file
 * Theme override for single payment method radio button.
 */
#}
{% set classes = [
  'payment-method-item bg-gray-100 hover:bg-gray-200 has-[:checked]:bg-gray-200 rounded-lg p-4 transition-colors',
] %}

<div {{ attributes.addClass(classes) }}>
  <div class="flex gap-3 items-start payment-method-option">
    {{ children }}

    {% if label %}
      <div class="cursor-pointer">
        {{ label }}
      </div>
    {% endif %}
  </div>

  {% if description %}
    <div{{ description.attributes.addClass('payment-method-description text-sm text-gray-600 leading-relaxed') }}>
      {{ description.content }}
    </div>
  {% endif %}
</div>
