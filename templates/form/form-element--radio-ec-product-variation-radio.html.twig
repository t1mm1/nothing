{#
/**
 * @file
 * Theme override for a radio form element wrapper.
 */
#}

{%
  set classes = [
  'form-item form-item--radio',
  disabled == 'disabled' ? 'opacity-50 cursor-not-allowed' : '',
  errors ? 'form-item--error' : '',
]
%}

<div{{ attributes.addClass(classes) }}>
  {# Label before #}
  {% if label_display == 'before' %}
    {{ label }}
  {% endif %}

  {# Prefix #}
  {% if prefix %}
    <span class="form-element__prefix text-sm text-gray-600 mb-2 block">
      {{ prefix }}
    </span>
  {% endif %}

  {# Radio wrapper with styling #}
  <div class="flex gap-3 items-center px-4 mb-2 rounded-lg transition-all duration-500 bg-gray-200 hover:bg-gray-300 has-[:checked]:bg-gray-300">
    {# Radio input #}
    {{ children }}

    {# Label after #}
    {% if label_display == 'after' %}
      <div class="flex-1">
        {{ label|merge({'#attributes': {'class': ['py-4 flex']}}) }}
      </div>
    {% endif %}
  </div>

  {# Description #}
  {% if description.content %}
    <div{{ description.attributes.addClass('mt-2 ml-7 text-sm text-gray-600 leading-relaxed') }}>
      {{ description.content }}
    </div>
  {% endif %}

  {# Suffix #}
  {% if suffix %}
    <span class="form-element__suffix text-sm text-gray-600 mt-2 block">
      {{ suffix }}
    </span>
  {% endif %}

  {# Errors #}
  {% if errors %}
    <div class="mt-2 p-3 text-sm text-red-600 bg-red-50 border border-red-300 rounded-lg">
      {{ errors }}
    </div>
  {% endif %}
</div>
