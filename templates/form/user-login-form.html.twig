{#
/**
 * @file
 * Theme override for user login form.
 */
#}
<div class="max-w-md">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">
      {{ 'Sign in to your account'|t }}
    </h2>

    {{ form.messages }}

    <div class="space-y-6">
      {{ form.name }}
      {{ form.pass }}

      <div class="flex items-center justify-between">
        {{ form.remember_me }}
        {% if form.forgot_password %}
          {{ form.forgot_password }}
        {% endif %}
      </div>

      {{ form.actions }}
      {{ form|without('messages', 'name', 'pass', 'remember_me', 'forgot_password', 'actions') }}
    </div>
  </div>

  {% if register_link %}
    <p class="mt-4 text-center text-sm text-gray-600">
      {{ 'Don\'t have an account?'|t }}
      <a href="{{ register_link }}" class="font-medium text-blue-600 hover:text-blue-500">
        {{ 'Sign up'|t }}
      </a>
    </p>
  {% endif %}
</div>
