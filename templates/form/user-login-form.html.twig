{#
/**
 * @file
 * Theme override for user login form.
 */
#}
<div class="max-w-md">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">
      {{ 'Sign in to your account'|t }}
    </h2>

    {{ form.messages }}

    <div class="space-y-6">
      {{ form.name }}
      {{ form.pass }}
      {{ form.actions }}
      {{ form|without('messages', 'name', 'pass', 'actions') }}
    </div>
  </div>

</div>
