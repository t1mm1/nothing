{#
/**
 * @file
 * Theme implementation for Features general paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 * - content: All paragraph items.
 * - attributes: HTML attributes for the containing element.
 */
#}
{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished',
  'max-w-[85rem] py-10 lg:py-14 mx-auto',
] %}

<div {{ attributes.addClass(classes) }}>
  {{ content.contextual_links }}

  <div class="lg:grid lg:grid-cols-12 lg:gap-16 lg:items-center">
    <div class="lg:col-span-7">
      <div class="grid grid-cols-12 gap-2 sm:gap-6 items-center lg:-translate-x-10">
        <div class="col-span-4 overflow-hidden rounded-xl">
          {{ content.field_image_additional_left }}
        </div>

        <div class="col-span-3 overflow-hidden rounded-xl">
          {{ content.field_image_additional_center }}
        </div>

        <div class="col-span-5 overflow-hidden rounded-xl">
          {{ content.field_image_additional_right }}
        </div>
      </div>
    </div>

    <div class="mt-5 sm:mt-10 lg:mt-0 lg:col-span-5">
      <div class="space-y-6 sm:space-y-8">
        <div class="space-y-2 md:space-y-4">
          <h2 class="font-bold text-3xl lg:text-4xl text-gray-900">
            {{ content.field_title }}
          </h2>
          {{ content.field_body }}
        </div>

        {% if paragraph.field_text_list %}
          <ul class="space-y-2 sm:space-y-4">
            {% for item in paragraph.field_text_list %}
              <li class="flex gap-x-3">
                <span class="mt-0.5 size-5 flex justify-center items-center rounded-full bg-blue-50 text-blue-600">
                  <svg class="shrink-0 size-3.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                </span>
                <div class="grow text-sm sm:text-base text-gray-600">
                  {{ item.value|raw }}
                </div>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>
</div>
