{#
/**
 * @file
 * Theme override for product teaser view mode.
 */
#}
<article{{ attributes.addClass('commerce-product-teaser', 'bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300') }}>

  <a href="{{ url }}" class="block group">
    {# Product Image #}
    <div class="aspect-square overflow-hidden bg-gray-200">
      {% if product.field_images %}
        {{ product.field_images }}
      {% else %}
        <div class="w-full h-full flex items-center justify-center">
          <span class="text-gray-400">No image</span>
        </div>
      {% endif %}
    </div>

    {# Product Info #}
    <div class="p-4">

      <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors line-clamp-2">
        {{ product_entity.title.value }}
      </h3>

      {% if product.body %}
        <div class="text-sm text-gray-600 mb-3 line-clamp-2">
          {{ product.body }}
        </div>
      {% endif %}

      {# Price #}
      {% if product.variations %}
        <div class="text-xl font-bold text-blue-600 mb-3">
          {{ product.variations }}
        </div>
      {% endif %}

      {# Add to Cart Button #}
      <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200">
        Add to Cart
      </button>

    </div>
  </a>

</article>
