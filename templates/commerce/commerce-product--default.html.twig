{#
/**
 * @file
 * Theme override to display a product.
 */
#}
<article{{ attributes.addClass('commerce-product', 'product-view', 'bg-white rounded-lg shadow-lg overflow-hidden') }}>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 p-6">

    {# Product Images #}
    <div class="product-images">
      {% if product.field_images %}
        <div class="mb-4">
          {{ product.field_images }}
        </div>
      {% else %}
        <div class="bg-gray-200 aspect-square rounded-lg flex items-center justify-center">
          <span class="text-gray-400 text-lg">No image available</span>
        </div>
      {% endif %}
    </div>

    {# Product Info #}
    <div class="product-info flex flex-col">

      {{ title_prefix }}
      <h1{{ title_attributes.addClass('text-4xl font-bold text-gray-900 mb-4') }}>
        {{ product_entity.title.value }}
      </h1>
      {{ title_suffix }}

      {# Price #}
      {% if product.variations %}
        <div class="product-price mb-6">
          <div class="text-3xl font-bold text-blue-600">
            {{ product.variations }}
          </div>
        </div>
      {% endif %}

      {# Description #}
      {% if product.body %}
        <div class="product-description prose max-w-none mb-6 text-gray-700 leading-relaxed">
          {{ product.body }}
        </div>
      {% endif %}

      {# Attributes/Options #}
      {% if product.field_product_attributes %}
        <div class="product-attributes mb-6 space-y-4">
          {{ product.field_product_attributes }}
        </div>
      {% endif %}

      {# Add to Cart Form #}
      <div class="product-actions mt-auto">
        {{ product.variations }}

        <div class="flex items-center gap-4 mt-6">
          {% if product.field_add_to_cart %}
            {{ product.field_add_to_cart }}
          {% endif %}
        </div>
      </div>

      {# Additional Info #}
      {% if product.field_sku %}
        <div class="product-meta mt-6 pt-6 border-t border-gray-200">
          <p class="text-sm text-gray-600">
            <span class="font-semibold">SKU:</span> {{ product.field_sku }}
          </p>
        </div>
      {% endif %}

    </div>

  </div>

  {# Tabs Section - Reviews, Details, etc #}
  <div class="product-tabs bg-gray-50 p-6 border-t border-gray-200">
    <div class="max-w-4xl mx-auto">
      {{ product|without('field_images', 'variations', 'body', 'field_product_attributes', 'field_add_to_cart', 'field_sku') }}
    </div>
  </div>

</article>
